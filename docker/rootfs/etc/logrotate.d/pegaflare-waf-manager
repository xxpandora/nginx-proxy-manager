/data/logs/*access.log /data/logs/*/access.log {
    create 0644 root root
    daily
    rotate 7
    missingok
    notifempty
    compress
    sharedscripts
    postrotate
    /bin/kill -USR1 `cat /run/nginx.pid 2>/dev/null` 2>/dev/null || true
    endscript
}

/data/logs/*error.log /data/logs/*/error.log {
    create 0644 root root
    daily
    rotate 7
    missingok
    notifempty
    compress
    sharedscripts
    postrotate
    /bin/kill -USR1 `cat /run/nginx.pid 2>/dev/null` 2>/dev/null || true
    endscript
}